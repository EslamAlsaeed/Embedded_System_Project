#include "../../HAL/7_Segment/7_Segment_Interface.h"
#include "../../HAL/Button/Button_Interface.h"
#include "../../HAL/LED/LED_Interface.h"
/*Function to Send any Number
 * Receive Number That you want to print
 */
void _7SEGMENT_APP_1(u8 Number) {
	_7Segment_Init(PORTB);
	_7Segment_Status(PORTB, COMMAN_CATHOD, ON);
	while (1) {
		_7Segment_SpecificNumber(PORTB, COMMAN_CATHOD, Number);
	}
}

/*Function to Print Number form zero  to 9
 */
void _7SEGMENT_APP_2(void) {
	_7Segment_Init(PORTA);
	_7Segment_Status(PORTA, COMMAN_CATHOD, ON);
	while (1) {
		_7Segment0To9(PORTA, COMMAN_CATHOD);
	}
}

/*Function to Increase By Button and Decrease By Anther Button
 *With LED Detect over Increase and Decrease
 */
void _7SEGMENT_APP_3(void) {
	u8 Inc = 0;
	_7Segment_Init(PORTA);
	_7Segment_Status(PORTA, COMMAN_CATHOD, ON);
	Button_InitPullDown(PORTB, PIN0);
	Button_InitPullDown(PORTB, PIN1);

	while (1) {
		if ((Button_GetValue(PORTB, PIN0)) == LOW) {
			Inc++;
			_7Segment_SpecificNumber(PORTA, COMMAN_CATHOD, Inc);
			LED_OFF(PORTB, PIN3);
		}
		if ((Button_GetValue(PORTB, PIN1)) == LOW) {
			Inc--;
			_7Segment_SpecificNumber(PORTA, COMMAN_CATHOD, Inc);

		}
		if (Inc > 9 || Inc < 0) {
			Inc = 0;
			LED_ON(PORTB, PIN3);
			_delay_ms(500);
		}
	}
}
